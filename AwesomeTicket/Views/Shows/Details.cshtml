@model AwesomeTicket.Models.Show

@{
    ViewData["Title"] = "Show Details";
}

<h1>Show Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@Model.Time</dd>
    <dt class="col-sm-2">Owner</dt>
    <dd class="col-sm-10">@Model.Owner</dd>
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>
    <dt class="col-sm-2">Created</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
